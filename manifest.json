{
  "manifest_version": 3,
  "name": "Tab Audio Capture Extension",
  "version": "1.0",
  "description": "Captures tab audio for Podify",
  "permissions": ["tabCapture", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
{
  "manifest_version": 3,
  "name": "Tab Audio Capture Extension",
  "version": "1.0",
  "description": "Captures tab audio for Podify",
